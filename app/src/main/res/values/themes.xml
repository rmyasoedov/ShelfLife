<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShelfLife" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/default_color</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.ShelfLife" parent="Base.Theme.ShelfLife" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

<!--    <style name="Theme.App.Starting" parent = "Theme.SplashScreen">-->
<!--        <item name="windowSplashScreenBackground">@color/default_color</item>-->
<!--        <item name="windowSplashScreenAnimatedIcon">@color/default_color</item>-->
<!--        <item name="postSplashScreenTheme">@color/default_color</item>-->
<!--    </style>-->

    <style name="DownMenuItem">
        <item name="android:paddingTop">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextMainMenu">
        <item name="android:textColor">#777C82</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/noto_sans_medium</item>
    </style>

    <style name="AddButtonStyle">
        <item name="android:text">+</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/noto_sans_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_add</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="ModButtonStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/noto_sans_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_modify</item>
    </style>

    <style name="TimeChip">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_input_field</item>
        <item name="fontFamily">@font/noto_sans_medium</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/bg_time_ofday</item>
    </style>

    <!--    устанавливает цвет заливки и кнопок в TimePicker-->
    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/default_color</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogNegativeButton</item>
    </style>

    <style name="CustomDialogPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/default_color</item> <!-- Цвет кнопки "Ok" -->
    </style>

    <style name="CustomDialogNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/default_color</item> <!-- Цвет кнопки "Cancel" -->
    </style>

    <style name="SubtitleStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subtitle_about_color</item>
        <item name="fontFamily">@font/noto_sans_medium</item>
    </style>
</resources>